{
  "name": "grandgold-marketplace",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:promotion": "pnpm --filter @grandgold/promotion-service dev",
    "dev:notification": "pnpm --filter @grandgold/notification-service dev",
    "build:promotion": "pnpm --filter @grandgold/promotion-service build",
    "build:notification": "pnpm --filter @grandgold/notification-service build",
    "start:promotion": "pnpm --filter @grandgold/promotion-service start",
    "start:notification": "pnpm --filter @grandgold/notification-service start",
    "dev:order": "pnpm --filter @grandgold/order-service dev",
    "start:order": "pnpm --filter @grandgold/order-service start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "gcp:deploy": "./infrastructure/gcp/deploy-all.sh",
    "gcp:deploy:service": "./infrastructure/gcp/deploy-service.sh",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "prettier": "^3.2.4",
    "turbo": "^1.12.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["sharp", "better-sqlite3"]
  }
}
