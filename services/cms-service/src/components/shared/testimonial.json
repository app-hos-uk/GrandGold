{
  "collectionName": "components_shared_testimonials",
  "info": {
    "displayName": "Testimonial",
    "description": "Customer testimonial component"
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string"
    },
    "avatar": {
      "type": "media",
