    },
    "content": {
      "type": "text",
      "required": true
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "country": {
      "type": "enumeration",
      "enum": ["IN", "AE", "UK"]
    }
  }
}
