{
  "kind": "collectionType",
  "collectionName": "legal_pages",
  "info": {
    "singularName": "legal-page",
    "pluralName": "legal-pages",
    "displayName": "Legal Page",
    "description": "Legal documents and policies"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["terms_of_service", "privacy_policy", "refund_policy", "shipping_policy", "seller_agreement", "cookie_policy", "aml_policy"],
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "country": {
      "type": "enumeration",
      "enum": ["all", "IN", "AE", "UK"],
      "default": "all"
    },
    "version": {
      "type": "string"
    },
    "effectiveDate": {
      "type": "date",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
