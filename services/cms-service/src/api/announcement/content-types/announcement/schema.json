{
  "kind": "collectionType",
  "collectionName": "announcements",
  "info": {
    "singularName": "announcement",
    "pluralName": "announcements",
    "displayName": "Announcement",
    "description": "Site-wide announcements and alerts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "message": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "type": {
      "type": "enumeration",
      "enum": ["info", "warning", "success", "error", "promotion"],
      "default": "info"
    },
    "link": {
      "type": "string"
    },
    "linkText": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "placement": {
      "type": "enumeration",
      "enum": ["top_bar", "modal", "banner", "footer"],
      "default": "top_bar"
    },
    "country": {
      "type": "enumeration",
      "enum": ["all", "IN", "AE", "UK"],
      "default": "all"
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "dismissible": {
      "type": "boolean",
      "default": true
    },
    "priority": {
      "type": "integer",
      "default": 0
    }
  }
}
