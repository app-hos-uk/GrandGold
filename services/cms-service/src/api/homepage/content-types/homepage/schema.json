{
  "kind": "singleType",
  "collectionName": "homepages",
  "info": {
    "singularName": "homepage",
    "pluralName": "homepages",
    "displayName": "Homepage",
    "description": "Homepage content and settings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "heroTitle": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "heroSubtitle": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "heroImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "heroCTA": {
      "type": "component",
      "repeatable": false,
      "component": "shared.cta-button"
    },
    "featuredCollections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::collection-page.collection-page"
    },
    "trustBadges": {
      "type": "component",
      "repeatable": true,
      "component": "shared.trust-badge"
    },
    "testimonials": {
      "type": "component",
      "repeatable": true,
      "component": "shared.testimonial"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
